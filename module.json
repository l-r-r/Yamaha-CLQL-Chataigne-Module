{
	"name":"Yamaha CL/QL",
	"type":"TCP Client",
	"path":"Hardware",
	
	"version":"0.0.1",
	"description":"Basic control of Yamaha CL/QL consoles over network",
	"url": "https://github.com/l-r-r/Yamaha-CLQL-Chataigne-Module.git",
	"downloadURL": "https://github.com/l-r-r/Yamaha-CLQL-Chataigne-Module/archive/master.zip",
	
	"hasInput":true,
	"hasOutput":true, 

	"hideDefaultCommands":true,

	"hideDefaultParameters":
	[
		"protocol",
		"messageStructure",
		"autoAdd",
		"firstValueIsTheName",
		"receiveFrequency",
		"output/local",
		"output/RemotePort",
		"pass_through",
	],

	"parameters":
	{
		"Model":
		{
			"type":"Enum",
			"options":
			{
				"Please select...":"none",
				"CL1":"cl1",
				"CL3":"cl3",
				"CL5":"cl5",
				"QL1":"ql1",
				"QL5":"ql5"
			}
		}
	},

	"defaults":
	{
		"autoAdd":false,
		"firstValueIsTheName":false,
		"Output":
		{
			"RemotePort":49280,
			"RemoteHost":"127.0.0.1",
			"local":false
		}
	},

	"scripts":
	[
		"YamahaCLQL.js"
	],

	"values":
	{

		"Input Channels":
		{
			"type":"Container",
			"collapsed":true
		},

		"Stereo Input Channels":
		{
			"type":"Container",
			"collapsed":true
		},

		"Main Outs":
		{
			"type":"Container",
			"collapsed":true
		},

		"Mix Outs":
		{
			"type":"Container",
			"collapsed":true
		},

		"Matrix Outs":
		{
			"type":"Container",
			"collapsed":true
		},

		"DCAs":
		{
			"type":"Container",
			"collapsed":true
		}
	},

	"commands":
	{
		"Get value":
		{
			"menu":"",
			"callback":"getValueCallback",
			"parameters":
			{
				"Command":
				{
					"type":"String"
				}
			}
		},

		"Set value":
		{
			"menu":"",
			"callback":"setValueCallback",
			"parameters":
			{
				"Command":
				{
					"type":"String"
				}
			}
		},

		"Set Scene":
		{
			"menu":"",
			"callback":"SetScene",
			"parameters":
			{
				"Scene":
				{
					"type":"Integer",
					"min":0,
					"max":99
				}
			}
		},

		"Channels Control":
		{
			"menu":"",
			"callback":"tests",
			"parameters":
			{
				"On": 
				{
					"type":"Boolean"
				},

				"Pan":
				{
					"type":"Integer",
					"min":-63,
					"max":63
				},              

				"Fader":
				{ 
					"type":"Float",
					"min":-60,
					"max":10
				},

					"Channel Type":
				{			
					"type":"Enum",
					"options":
					{
						"Input":"input",
						"Output":"output",
						"Master":"master"
					},
				},


				"Destination":
				{			
					"type":"Enum",
					"options":
					{
						"Unique":"unique",
						"From To":"fromTo",
						"All":"all"
					},
				},

				"Channel Num":
				{
					"type":"Integer",
					"min":1,
					"max":72,
					"dependency": 
					{
						"source":"destination",
						"value":"all",
						"check":"notEquals",
						"action":"show"
					}
				},


				"To Channel Num":
				{
					"type":"Integer",
					"min":1,
					"max":72,
					"dependency": 
					{
						"source":"destination",
						"value":"fromTo",
						"check":"equals",
						"action":"show"
					}
				},            
			}
		}
	}
}
